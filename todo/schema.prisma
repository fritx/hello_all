datasource db {
  // could be postgresql or mysql
  provider = "sqlite"
  url      = "file:dev.db"
}

generator db {
  provider = "go run github.com/steebchen/prisma-client-go"
}

model Todo {
  id         String    @id @default(cuid())
  title      String
  desc       String
  status     String    @default("") // "", "wip", "done"
  lastDoneAt DateTime?
  updatedAt  DateTime  @updatedAt
  createdAt  DateTime  @default(now())
}
